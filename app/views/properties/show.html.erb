<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= "#{@property.rent}円" %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数</strong>
  <%= "#{@property.age}年" %>
</p>

<p>
  <strong>備考</strong>
  <%= @property.remarks %>
</p>
<hr>

<% num = 1 %>
<% @nearest_stations.each do |nearest_station|%>
<h4>最寄り駅<%= num %></h4>
  <p>
    <strong>路線名</strong>
    <%= nearest_station.route %>
  </p>

  <p>
    <strong>駅名</strong>
    <%= nearest_station.station %>
  </p>

  <p>
    <strong>徒歩分数</strong>
    <%= "#{nearest_station.minutes_walk}分" %>
  </p>
  <% num += 1 %>
  <br>
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
